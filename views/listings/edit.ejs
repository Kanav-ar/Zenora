<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row mt-3 mb-5">
    <div class="col-8 offset-2">
      <h3 class="mb-4">Edit your Listing</h3>
      <form
        action="/listings/<%=listing._id%>?_method=PUT"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="new-title" class="form-label">Title</label>
          <input
            name="listing[title]"
            class="form-control"
            id="new-title"
            type="text"
            value="<%= listing.title %>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Title required</div>
        </div>

        <div class="mb-3">
          <label for="new-description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="enter description"
            class="form-control"
            id="new-description"
            required
          ><%= listing.description %></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3" >
          <label for="" class="form-label">Original Listing Image</label><br>
          <img src="<%= originalImageUrl %>">
        </div>

           <div class="row">
          <div class="mb-3 col-md-5">
          <label for="new-image" class="form-label">Upload Listing image</label>
          <input
            name="listing[image]"
            class="form-control"
            id="new-image"
            type="file"
            placeholder="enter image URL/Link"
          />
          <div class="invalid-feedback">Listing Image is required</div>
        </div>

        <div class="mb-3 col-md-7">
        <label for="Type-listing" class="form-label">Type of Listing</label>
        
            <select name="listing[category]" class="form-select" id="Type-listing" required>
              <option value="" disabled selected hidden>Add Type</option>
              <option value="room" <%= listing.category === "room" ? "selected" : "" %>>Room</option>
              <option value="city"<%= listing.category === "city" ? "selected" : "" %>>City</option>
              <option value="mountain"<%= listing.category === "mountain" ? "selected" : "" %>>Mountain</option>
              <option value="castle"<%= listing.category === "castle" ? "selected" : "" %>>Castle</option>
              <option value="pool"<%= listing.category === "pool" ? "selected" : "" %>>Pool</option>
              <option value="camp"<%= listing.category === "camp" ? "selected" : "" %>>Camp</option>
              <option value="farm"<%= listing.category === "farm" ? "selected" : "" %>>Farm</option>
              <option value="dome"<%= listing.category === "dome" ? "selected" : "" %>>Dome</option>
              <option value="boat"<%= listing.category === "boat" ? "selected" : "" %>>Boat</option>
            </select>
              
            <div class="invalid-feedback">Please select the type of listing</div>
          </div>
          </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="new-price" class="form-label">Price</label>
            <input
              name="listing[price]"
              class="form-control"
              id="new-price"
              type="text"
              value="<%= listing.price %>"
              type="number"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="new-country" class="form-label">Country</label>
            <input
              name="listing[country]"
              class="form-control"
              id="new-country"
              type="text"
              value="<%= listing.country %>"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            class="form-control"
            id="new-location"
            type="text"
            value="<%= listing.location %>"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
      </form>
    </div>
  </div>
</body>
